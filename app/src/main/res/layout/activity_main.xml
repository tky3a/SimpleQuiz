<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:text="@string/successCnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvCount" tools:layout_editor_absoluteY="38dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp" tools:ignore="MissingConstraints"/>
    <TextView
            android:text="@string/questionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvQuestion"
            app:layout_constraintTop_toBottomOf="@+id/tvCount"
            android:layout_marginTop="24dp" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btn0"
            tools:layout_editor_absoluteX="204dp" app:layout_constraintTop_toBottomOf="@+id/tvQuestion"
            android:layout_marginTop="90dp" app:layout_constraintBottom_toTopOf="@+id/btn1"/>
    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btn1"
            tools:layout_editor_absoluteX="160dp" app:layout_constraintTop_toBottomOf="@+id/btn0"
            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toTopOf="@+id/btn2"/>
    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btn2"
            tools:layout_editor_absoluteX="171dp" app:layout_constraintTop_toBottomOf="@+id/btn1"
            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toTopOf="@+id/button4"/>
    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button4"
            tools:layout_editor_absoluteX="163dp" app:layout_constraintTop_toBottomOf="@+id/btn2"
            android:layout_marginTop="32dp" app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>